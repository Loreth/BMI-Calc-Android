<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   >


    <ImageView
            android:layout_width="@dimen/bmi_history_img_size"
            android:layout_height="@dimen/bmi_history_img_size"
            android:id="@+id/history_bmi_category_img"
            android:layout_marginTop="@dimen/bmi_history_margin_top"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="@dimen/bmi_history_margin_bottom"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.494"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="@dimen/bmi_history_img_margin_right" tools:srcCompat="@drawable/cool"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/history_height" tools:text="Height[cm] 170"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            app:layout_constraintStart_toStartOf="@+id/history_weight"
            app:layout_constraintEnd_toEndOf="@+id/history_weight" android:layout_marginBottom="@dimen/bmi_history_margin_bottom"
            app:layout_constraintBottom_toTopOf="@+id/guideline2"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/history_weight" tools:text="Weight[kg] 60" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/bmi_history_margin_left_right"
            app:layout_constraintEnd_toStartOf="@+id/guideline4"
            android:layout_marginEnd="@dimen/bmi_history_margin_left_right"
            android:layout_marginTop="@dimen/bmi_history_margin_top" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.476" android:layout_marginBottom="@dimen/bmi_history_margin_bottom"
            app:layout_constraintBottom_toTopOf="@+id/divider"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/history_bmi_value"
            android:textSize="@dimen/bmi_history_value_text_size" tools:text="22.22"
            app:layout_constraintStart_toStartOf="@+id/guideline4" android:layout_marginStart="@dimen/bmi_history_margin_left_right"
            android:layout_marginBottom="@dimen/bmi_history_margin_bottom" app:layout_constraintBottom_toTopOf="@+id/guideline2"
            android:layout_marginEnd="@dimen/bmi_history_margin_left_right" app:layout_constraintEnd_toStartOf="@+id/history_bmi_category_img"
            android:layout_marginTop="@dimen/bmi_history_margin_top" app:layout_constraintTop_toTopOf="parent" android:textStyle="bold"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/history_category"
            android:textSize="@dimen/bmi_history_category_text_size"
            app:layout_constraintTop_toTopOf="@+id/guideline2" android:layout_marginStart="@dimen/bmi_history_margin_left_right"
            app:layout_constraintStart_toStartOf="@+id/guideline4" android:layout_marginEnd="@dimen/bmi_history_margin_left_right"
            app:layout_constraintEnd_toStartOf="@+id/history_bmi_category_img" android:layout_marginBottom="@dimen/bmi_history_margin_bottom"
            app:layout_constraintBottom_toBottomOf="parent" tools:text="Normal"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/history_date"
            tools:text="19.04.2019"
            android:textAlignment="center"
            android:layout_marginBottom="@dimen/bmi_history_margin_bottom"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="@dimen/bmi_history_margin_left_right"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="@dimen/bmi_history_margin_left_right"
            app:layout_constraintEnd_toStartOf="@+id/guideline4" app:layout_constraintTop_toTopOf="@+id/guideline2"
            android:layout_marginTop="@dimen/bmi_history_margin_top" android:textSize="@dimen/bmi_history_date_text_size" android:textAllCaps="false"
    />
    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline2"
            app:layout_constraintGuide_percent="0.70"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline4"
            app:layout_constraintGuide_percent="0.4"/>
    <View
            android:id="@+id/divider"
            android:layout_width="@dimen/bmi_history_divider_width"
            android:layout_height="@dimen/bmi_history_divider_height"
            android:background="?android:attr/listDivider"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/bmi_history_divider_margin_left_right"
            app:layout_constraintEnd_toStartOf="@+id/guideline4"
            android:layout_marginEnd="@dimen/bmi_history_divider_margin_left_right" app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="@dimen/bmi_history_divider_margin_top_bottom" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="@dimen/bmi_history_divider_margin_top_bottom"
            app:layout_constraintBottom_toTopOf="@+id/guideline2"/>
</androidx.constraintlayout.widget.ConstraintLayout>

